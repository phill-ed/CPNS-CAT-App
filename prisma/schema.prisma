generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== USER & AUTH ====================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // For credentials auth
  image         String?
  role          Role      @default(USER)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions      TestSession[]
  createdTests  Test[]
}

enum Role {
  ADMIN
  USER
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== TESTS ====================

model Test {
  id               String   @id @default(cuid())
  title            String
  description      String?
  category         TestCategory
  subCategory      String?
  subSubCategory   String?  // For PU sub-sub categories
  duration         Int      // in minutes
  totalQuestions   Int
  passingScore     Float    @default(60)
  isActive         Boolean  @default(true)
  shuffleQuestions Boolean  @default(true)
  shuffleAnswers   Boolean  @default(true)
  showAnswers      Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  createdById      String

  createdBy   User        @relation(fields: [createdById], references: [id])
  questions   Question[]
  sessions    TestSession[]
}

enum TestCategory {
  TWK  // Tes Wawasan Kebangsaan
  TKP  // Tes Karakteristik Pribadi
  PU   // Tes Intelegensi Umum
}

// ==================== QUESTIONS ====================

model Question {
  id           String   @id @default(cuid())
  text         String   @db.Text
  imageUrl     String?  // For figural questions
  explanation  String?  @db.Text
  difficulty   Difficulty @default(MEDIUM)
  category     TestCategory
  subCategory  String?
  subSubCategory String? // For PU: ANALOGY, SYLOGISM, ARITHMETIC, etc.
  points       Int      @default(1)
  isPublic     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  testId       String?
  createdById  String?

  test     Test?       @relation(fields: [testId], references: [id], onDelete: Cascade)
  answers  Answer[]
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model Answer {
  id         String   @id @default(cuid())
  text       String
  imageUrl   String?  // For figural answers
  isCorrect  Boolean  @default(false)
  order      Int      @default(0)
  questionId String

  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

// ==================== TEST SESSIONS ====================

model TestSession {
  id            String   @id @default(cuid())
  userId        String
  testId        String
  status        SessionStatus @default(IN_PROGRESS)
  score         Float?
  correctCount  Int      @default(0)
  wrongCount    Int      @default(0)
  timeSpent     Int?     // in seconds
  startedAt     DateTime @default(now())
  completedAt   DateTime?

  user     User        @relation(fields: [userId], references: [id])
  test     Test        @relation(fields: [testId], references: [id])
  answers  UserAnswer[]
}

enum SessionStatus {
  IN_PROGRESS
  COMPLETED
  TIMED_OUT
  ABANDONED
}

model UserAnswer {
  id              String   @id @default(cuid())
  sessionId       String
  questionId      String
  selectedAnswerId String
  isCorrect       Boolean?
  timeSpent       Int?     // seconds spent on this question
  answeredAt      DateTime @default(now())

  session TestSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

// ==================== ANALYTICS ====================

model TestResult {
  id           String   @id @default(cuid())
  userId       String
  testId       String
  sessionId    String   @unique
  score        Float
  percentile   Float?
  timeTaken    Int
  correctByCategory Json?  // { "TWK": 10, "PU": 8, "TKP": 7 }
  weakAreas    String[]  // Categories needing improvement
  strongAreas  String[]
  createdAt    DateTime @default(now())
}

